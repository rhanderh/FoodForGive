<h1>Listing confessions</h1>

<table>
  <thead>
    <tr>
      <th>Confession text</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @confessions.each do |confession| %>
      <tr>
        <td><%= confession.confession_text %></td>
        <td><%= link_to 'Show', confession %></td>
        <td><%= link_to 'Edit', edit_confession_path(confession) %></td>
        <td><%= link_to 'Destroy', confession, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

